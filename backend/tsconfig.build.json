{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
